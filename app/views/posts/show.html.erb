<div class='container'> 

<p style="color: green"><%= notice %></p>

<%= render @post %>

<div class="d-flex justify-content-between align-items-center">
  <% if current_user && current_user.id == @post.user_id %>
    <div class='d-flex'>
      <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary mx-2" %>
      <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
  
  <%= link_to "Back to posts", posts_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <strong>Add a New Comment:</strong>
      <%= render partial: 'comments/form', locals: { post: @post, comment:@comment } %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-8">
      <strong>Comments:</strong>
      <%= render @post.comments %>
    </div>
  </div>
</div>



