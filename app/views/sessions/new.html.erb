<% if flash[:alert].present? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5 shadow-sm bg-light ">
        <h1 class="card-header d-flex justify-content-center">Login Form</h1>
        <div class="card-body">
          <%= form_with model: @user, url: login_path, html: { class: "login-form" } do |form| %>
            <div class="form-group ">
              <%= form.label :name, class: "control-label" %>
              <%= form.text_field :name, class: 'form-control shadow-sm bg-light', placeholder: "Enter your username"  %>
            </div>
            <div class="form-group">
              <%= form.label :password, class: "control-label " %>
              <%= form.password_field :password, class: 'form-control shadow-sm bg-light', placeholder: "Enter your password" %>
            </div>
            <div class="form-group d-flex justify-content-center">
              <%= form.submit 'Login', class: 'btn btn-primary btn-block mt-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
