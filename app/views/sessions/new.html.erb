<h1> Sign In</h1>

<%= form_with url: sign_in_path do |form|%>
     <div class='mb-3'>
    <%= form.label :email %>
    <%= form.text_field :email, value: @user.email, class: "form-control", placeholder: 'write your email' %>
  </div>

  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: 'write your password' %>
  </div>
  <div class='mb-3 btn btn-primary'>
    <%= form.submit 'SIGN IN' %>
</div>
<%end%>